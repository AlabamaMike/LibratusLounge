# Primo Poker Configuration
PRIMO_POKER_API_URL=wss://api.primo.poker
PRIMO_POKER_API_KEY=your-primo-poker-api-key

# LLM Configuration (Optional)
LLM_PROVIDER=workers-ai  # Options: workers-ai, anthropic, openai
ANTHROPIC_API_KEY=your-anthropic-api-key  # Required if LLM_PROVIDER=anthropic
OPENAI_API_KEY=your-openai-api-key        # Required if LLM_PROVIDER=openai

# Agent Configuration
MAX_AGENTS_PER_GAME=5
AGENT_DECISION_TIMEOUT=5000  # milliseconds
ENABLE_LLM_AGENTS=true
LLM_DAILY_BUDGET=10.00      # USD

# Caching Configuration
ENABLE_CACHE=true
DECISION_CACHE_SIZE=10000
CACHE_TTL_SECONDS=3600

# Development Settings
DEBUG_MODE=true
LOG_LEVEL=debug  # Options: debug, info, warn, error

# Webhook Configuration (Optional)
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_RETRY_ATTEMPTS=3

# Performance Tuning
MAX_CONCURRENT_DECISIONS=50
WORKER_MEMORY_LIMIT=128  # MB

# Security
RATE_LIMIT_DECISIONS_PER_MINUTE=100
ENABLE_REQUEST_SIGNING=true